= form_for(@user) do |f|
  = render 'shared/error_messages', obj: @user
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :email
    %br
      = f.email_field :email
  .field
    = f.label :password
    %br
      = f.password_field :password, :autocomplete => :off
  .field
    = f.label :password_confirmation
    %br
      = f.password_field :password_confirmation, :autocomplete => :off
  .actions
    = f.submit